#include <stdio.h>
#include <string.h>

int main(void) {
    char ข้อความ[1000];   // เก็บข้อความ
    char คำค้น[100];      // เก็บคำที่อยากหา
    int พบทั้งหมด = 0;     // ตัวนับจำนวนที่เจอ

    // รับข้อความ
    printf("พิมพ์ข้อความ: ");
    scanf(" %[^\n]", ข้อความ);

    // รับคำที่ต้องการหา
    printf("พิมพ์คำที่ต้องการหา: ");
    scanf(" %s", คำค้น);

    int จำนวนตัวในข้อความ = strlen(ข้อความ);
    int จำนวนตัวที่ค้นหา = strlen(คำค้น);

    // วนดูทุกตำแหน่งในข้อความ
    for (int i = 0; i <= จำนวนตัวในข้อความ -จำนวนตัวที่ค้นหา; i++) {
        int เหมือนกัน = 1; 
        for (int j = 0; j < จำนวนตัวที่ค้นหา; j++) {
            if (ข้อความ[i + j] != คำค้น[j]) {
                เหมือนกัน = 0;
                break;
            }
        }
        if (เหมือนกัน) {
            printf("พบคำ \"%s\" ที่ตำแหน่ง %d\n", คำค้น, i);
            พบทั้งหมด++;
        }
    }

    if (พบทั้งหมด == 0)
        printf("ไม่พบคำ \"%s\" ในข้อความนี้\n", คำค้น);
    else
        printf("รวมพบทั้งหมด: %d ครั้ง\n", พบทั้งหมด);

    return 0;
}
